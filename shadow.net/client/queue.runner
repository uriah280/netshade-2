#!/bin/sh

# get the current path
CURPATH=`pwd`

inotifywait -mr --timefmt '%d/%m/%y %H:%M' --format '%T %w %f' -e close_write /home/milton/netshade-2/temp/queue/notify | while read date time dir file; do

    FILECHANGE=${dir}${file}
# convert absolute path to relative
    FILECHANGEREL=`echo "$FILECHANGE" | sed 's_'$CURPATH'/__'`

    rm nohup.out

    nohup php /home/milton/netshade-2/shadow.net/client/queue.poll.php $FILECHANGE & # > /dev/null & echo $!

    echo "At ${time} on ${date}, file $FILECHANGE was changed"
done

